<h4>User's Purchases List</h4>



<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Id</th>
      <th>User's Id</th>
      <th>Product's id</th>
      <th>Status</th>


    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
    <tr>
      <td>
        <%= purchase[:user_id] %>
      </td>
      <td>
        <%= purchase[:product_id] %>
      </td>
      <td>
        <%= purchase[:status] %>
      </td>


    </tr>
    <% end %>
  </tbody>
</table>
