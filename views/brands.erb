<h4>Brands List</h4>



<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Category</th>
      <th>Cost per unit</th>
      <th>Supplier</th>
      <th>Description</th>

    </tr>
  </thead>
  <tbody>
    <% @brands.each do |brand| %>
    <tr>
      <td>
        <%= brand[:product_id] %>
      </td>
      <td>
        <%= brand[:product_name] %>
      </td>
      <td>
        <%= brand[:product_category] %>
      </td>
      <td>
        <%= brand[:product_cost_per_unit] %>
      </td>
      <td>
        <%= brand[:description] %>
      </td>

    </tr>
    <% end %>
  </tbody>
</table>
