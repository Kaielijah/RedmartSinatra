<div class="container">
  <h2>Edit Profile Details</h2>

  <form class="form-horizontal " action="/users/<%= @user[:id] %>" role="form" method="post">

    <input type="hidden" name="_method" value="put">
    <div class="form-group ">
    <label class="control-label col-sm-2" for="email">Id:</label>
    <div class="col-xs-1">
    <input type="text" class="form-control col-xs-1" value="<%= @user[:id] %>" disabled>
  </div>
</div>


    <div class="form-group ">
      <label class="control-label col-sm-2" for="email">Name:</label>
      <div class="col-sm-5">
        <input type="text" class="form-control" name="user[name]" value="<%= @user[:name] %>" >
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" >Email:</label>
      <div class="col-sm-5">
        <input type="text" class="form-control" name="user[email]" value="<%= @user[:email] %>" >
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="email">Password:</label>
      <div class="col-sm-5">
        <input type="text" class="form-control" name="user[password]" value="<%= @user[:password] %>" >
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" > Credit card number:</label>
      <div class="col-sm-5">
        <input type="text" class="form-control" name="user[cc_number]" value="<%= @user[:cc_number] %>" >
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" > Address:</label>
      <div class="col-sm-5">
        <input type="text" class="form-control" name="user[address]" value="<%= @user[:address] %>" >
      </div>
    </div>


    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-5">
        <input type="submit" value="submit" class="btn btn-default btn pull-right"  >

      </div>
    </div>
  </form>
</div>
